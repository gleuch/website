- @page_title = t('.page_title', default: '', tag: @search_query)
- @page_meta_description = t('.meta.description', default: '')
- @page_meta_keywords = t('.meta.keywords', default: '')
- @page_share_title = t('.page_title', default: '')
- @page_share_description = t('.meta.description', default: '')


.page-header
  %h1= t('.heading', tag: @search_query.titleize)
  - unless @search_results.blank?
    %p= t('.subheading', tag: @search_query, count: @search_results.size)

#search-result
  - unless @search_results.blank?
    - @search_results.each do |v|
      - case v[:type]
        - when 'project'
          = render 'project', project: v
        - when 'client_work'
          = render 'client_work', client_work: v

  - else
    .none.text-center= t('.none', tag: @search_query)