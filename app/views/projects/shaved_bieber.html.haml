- # Meta & Page Setup
- @page_title = t('.page_title', default: '')
- @page_meta_description = t('.meta.description', default: '')
- @page_meta_keywords = t('.meta.keywords', default: '')
- @page_share_title = t('.page_title', default: '')
- @page_share_description = t('.meta.description', default: '')
- @breadcrumbs << {name: t('.heading')}


- # Page Content
- content_opts = {}
- content_opts[:subheading] = t('.subheading', default: '')
- content_opts[:statement] = t('.statement', default: '')
- content_opts[:explanation] = t('.explanation')
- content_opts[:content_rails] = t('.content_rails', default: '')
- content_opts[:share_link] = @canonical_url
- content_opts[:github_link] = 'https://github.com/gleuch/shaved-bieber'


%article
  = render 'projects/intro_area', heading: t('.heading', default: ''), carousel_images: t('.carousel')
  = render 'projects/content', content_opts
  = render 'projects/exhibitions', exhibitions: t('.exhibitions', default: '')
  = render 'projects/awards', awards: t('.awards', default: '')
  = render 'projects/press', press: t('.press', default: '')

  = render 'projects/footer'