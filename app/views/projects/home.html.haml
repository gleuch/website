- @page_title = t('.page_title', default: '')
- @page_meta_description = t('.meta.description', default: '')
- @page_meta_keywords = t('.meta.keywords', default: '')
- @page_share_title = t('.page_title', default: '')
- @page_share_description = t('.meta.description', default: '')


%header.page-header
  %h1= t('.heading')
  %h4= t('.subheading')
  %p
    = link_to project_url(:all) do
      .hidden-xs= t('.list')
      .visible-xs-inline= t('.list_mobile')

#works-area
  %ul.works-list.list-unstyled
    - @featured_projects.each_with_index do |project,i|
      %li
        = link_to project_url( project[:slug] ) do
          .image-area
            - if project[:image].present?
              .image{style: "background-image: url('#{project[:image]}')"}
          %h1= project[:name]
          - if project[:description].present?
            .description.hidden-xs= project[:description]
  .clearfix

  %footer.works-footer
    %a.btn.btn-more{href: project_url(:all)}= t('.footer.more')