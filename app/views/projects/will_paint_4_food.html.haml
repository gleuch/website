- # Meta & Page Setup
- @page_title = t('.page_title', default: '')
- @page_meta_description = t('.meta.description', default: '')
- @page_meta_keywords = t('.meta.keywords', default: '')
- @page_share_title = t('.page_title', default: '')
- @page_share_description = t('.meta.description', default: '')
- @breadcrumbs << {name: t('.heading')}


- # Carousel Images
- carousel_images = []
- #carousel_images << {img: image_tag('projects/shaved-bieber/carousel-1.jpg', alt: ''), caption: t('.carousel.captions')[0]}
- #carousel_images << {img: image_tag('projects/shaved-bieber/carousel-2.jpg', alt: ''), caption: t('.carousel.captions')[1]}


- # Page Content
%article
  = render 'projects/intro_area', heading: t('.heading'), carousel_images: carousel_images
  = #render 'projects/exhibitions', exhibitions: t('.exhibitions')
  = #render 'projects/awards', awards: t('.awards')
